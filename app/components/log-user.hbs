<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Register/Login here</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <label class="log-form-labels" for="userName">
                    User Name ::
                </label>
                <Input @id="userName" @type="text" @value={{this.authentication.userName}} />
                <br>
                <br>
                <label class="log-form-labels" for="password">
                    Password ::
                </label>
                <Input @id="password" @type="password" @value={{this.authentication.password}} />
            </div>
            <div class="modal-footer">
                <h5>
                    New User, click Register ::
                </h5>
                <button type="button" {{on "click" this.createUser}} class="btn btn-secondary" data-dismiss="modal">Register</button>
                <button type="button" {{ on "click" this.authenticateUser }} class="btn btn-primary"
                    data-dismiss="modal">Login</button>
            </div>
        </div>
    </div>
</div>